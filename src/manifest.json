{
  "manifest_version": 2,
  "name": "Rise Ticker Network Diagnostics Utility",
  "short_name": "Rise Ticker Network Diagnostics Utility",
  "version": "0.0.5",
  "minimum_chrome_version": "31",
  "offline_enabled": true,
  "default_locale": "en",
  "icons": {
    "128": "img/icon_128.png",
    "16": "img/icon_16.png"
  },
  "permissions" : [
   { "socket" : [
     "tcp-connect:*:443",
     "tcp-connect:*:80",
     "tcp-connect:*:25",
     "tcp-connect:*:8041",
     "udp-bind:*",
     "udp-send-to:*:53",
     "udp-send-to:*:3478",
     "udp-send-to:*:19302"
   ]},
   "clipboardWrite",
   "http://*.risedisplay.com/*",
   "http://s3.amazon.com/*",
   "https://contentfinancial2.appspot.com/*",
   "https://contentsports.appspot.com/*",
   "https://content-news.appspot.com/*",
   "https://connect.risevision.com/*"
  ],
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
